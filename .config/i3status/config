# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2
    color_good = "#baff29"
    color_degraded = "#ef8a17"
    color_bad = "#ef2917"
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
order += "memory"
order += "load"
order += "read_file BTC"
order += "read_file DOGE"
order += "read_file LTC"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet wg0"
order += "ethernet wg1"
order += "volume master"
order += "battery all"
order += "tztime date"
order += "tztime time"
order += "tztime epoch"

disk "/" {
    format = "root: %used/%total"
}

disk "/home" {
    format = "home: %used/%total"
}

memory {
    format = "MEM: %used/%total"
}

load {
    format = "LOAD: %1min %5min %15min"
}

read_file "BTC" {
    path = "/tmp/cripto/BTCUSDT"
    format = "%title %content"
    format_bad = ""
}

read_file "DOGE" {
    path = "/tmp/cripto/DOGEUSDT"
    format = "%title %content"
    format_bad = ""
}

read_file "LTC" {
    path = "/tmp/cripto/LTCUSDT"
    format = "%title %content"
    format_bad = ""
}

wireless _first_ {
    format_up = "WLAN: %ip (%essid) %quality"
    format_down = "WLAN: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "ETH: %ip (%speed)"
    format_down = "ETH: down"
}

ethernet wg0 {
    # if you use %speed, i3status requires root privileges
    format_up = "V#1: %ip"
    format_down = "V#1: down"
}

ethernet wg1 {
    # if you use %speed, i3status requires root privileges
    format_up = "V#2: %ip"
    format_down = "V#2: down"
}

volume master {
    format = "♪ %volume"
    format_muted = "♪ muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery all {
    format = "%status %percentage %remaining"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "BAT"
}

tztime date {
    format = "%d/%m/%Y"
}

tztime time {
    format = "%H:%M:%S"
}

tztime epoch {
    format = "%s"
}

